{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
		"noImplicitAny" : true,
		"noImplicitReturns" : true,
    "noImplicitThis": false,
    "lib": [ "es2015", "dom" ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"]
    }
  },
  "include": [
    "./src/**/*"
  ]
}
